<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cskaoyan.hackernews.mapper.CommentMapper">
    <resultMap id="BaseResultMap" type="com.cskaoyan.hackernews.bean.Comment">
    <result column="id" property="id"/>
    <result column="content" property="content"/>
    <result column="entity_id" property="entityId" />
    <result column="created_date" property="createdDate" />
    <result column="entity_type" property="entityType" />
    <result column="status" property="status" />
    <association property="user" column="user_id" select="com.cskaoyan.hackernews.mapper.UserMapper.selectById"/>
  </resultMap>
  <sql id="Base_Column_List">
    id, content, user_id, entity_id, entity_type, created_date, status
</sql>

  <select id="selectByEntityId" resultMap="BaseResultMap">
    select <include refid="Base_Column_List"/>
    from comment where entity_id = #{newsId}
  </select>

  <select id="selectAllNews" resultMap="BaseResultMap">
    select <include refid="Base_Column_List"/>
    from t
  </select>

  <insert id="insert">
      insert into comment (content, user_id, entity_id,entity_type,created_date,status)
      value (#{content}, #{userId}, #{newsId},0,#{createdDate},0)
  </insert>
</mapper>